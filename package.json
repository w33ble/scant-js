{
  "name": "scant",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "lint": "eslint packages/*/src/**/*.js packages/*/test/**/*.js",
    "test": "npm run lint && lerna run build && lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w33ble/scant-js.git"
  },
  "lint-staged": {
    "*.js": ["eslint --fix"],
    "*.json": ["prettier --write"]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.0"
  }
}
